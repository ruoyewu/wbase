<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_change_tab"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.wuruoye.library.widget.changetab.ChangeTabLayout
            android:id="@+id/ctl_change_tab"
            app:normalTextColor="@color/colorPrimary"
            app:selectTextColor="@color/colorAccent"
            app:normalBorderColor="@color/colorPrimary"
            app:selectBorderColor="@color/colorAccent"
            app:normalStuffColor="@color/colorPrimary"
            app:selectStuffColor="@color/colorAccent"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <com.wuruoye.library.widget.changetab.ChangeTabItem
                app:text="page 1"
                app:icon="@mipmap/ic_launcher_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.wuruoye.library.widget.changetab.ChangeTabItem
                app:text="page 2"
                app:icon="@mipmap/ic_launcher_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.wuruoye.library.widget.changetab.ChangeTabItem
                app:text="page 3"
                app:icon="@mipmap/ic_launcher_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </com.wuruoye.library.widget.changetab.ChangeTabLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>