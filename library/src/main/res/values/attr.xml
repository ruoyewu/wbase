<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartLinearLayout">
        <attr name="orientation">
            <enum name="horizontal" value="1"/>
            <enum name="vertical" value="0"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="HeartBeatView">
        <attr name="heartColor" format="color"/>
        <attr name="duration" format="integer"/>
        <attr name="count" format="integer"/>
        <attr name="press" format="float"/>
    </declare-styleable>

    <declare-styleable name="ChangeTabItem">
        <attr name="text" format="string"/>
        <attr name="icon" format="reference"/>
        <attr name="iconSelect" format="reference"/>
        <attr name="imgLength" format="dimension"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ChangeTabLayout">
        <attr name="normalTextColor" format="color"/>
        <attr name="selectTextColor" format="color"/>
        <attr name="normalBorderColor" format="color"/>
        <attr name="selectBorderColor" format="color"/>
        <attr name="normalStuffColor" format="color"/>
        <attr name="selectStuffColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="ChangeImageView">
        <attr name="civTint" format="color"/>
        <attr name="civImg" format="reference"/>
        <attr name="civImgTint" format="color"/>
        <attr name="civDuration" format="integer"/>
        <attr name="civScale" format="float"/>
    </declare-styleable>
</resources>